# AiiDA VM bootstrap environment template
# Copy to ops/aiida-vm/aiida-vm.env and adjust values.

# Service/package behavior
AIIDA_VM_APT_UPDATE=1
AIIDA_VM_INSTALL_PACKAGES=1
AIIDA_VM_ENABLE_SERVICES=1
AIIDA_VM_WAIT_TIMEOUT_SECONDS=60

# PostgreSQL settings
AIIDA_PGHOST=127.0.0.1
AIIDA_PGPORT=5432
AIIDA_PGDATABASE=aiida_db
AIIDA_PGUSER=aiida
AIIDA_PGPASSWORD=aiida-dev-only

# RabbitMQ settings
AIIDA_BROKER_PROTOCOL=amqp
AIIDA_BROKER_HOST=127.0.0.1
AIIDA_BROKER_PORT=5672
AIIDA_BROKER_USER=aiida
AIIDA_BROKER_PASSWORD=aiida-dev-only
AIIDA_BROKER_VHOST=aiida

# AiiDA profile settings
AIIDA_PROFILE=chem-model-vm
AIIDA_CONFIG_DIR=.just-runtime/aiida-vm/config
AIIDA_REPOSITORY_DIR=.just-runtime/aiida-vm/repository
AIIDA_DEFAULT_USER_EMAIL="dev@chem-model-edit.local"
AIIDA_DEFAULT_USER_FIRST_NAME="Chem"
AIIDA_DEFAULT_USER_LAST_NAME="Model"
AIIDA_DEFAULT_USER_INSTITUTION="Chem Model Edit"

# uv project path for verdi
AIIDA_UV_PROJECT=apps/api
