{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "extends": "nx/presets/core.json",
  "npmScope": "chem-model",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "lint",
          "test",
          "typecheck",
          "format",
          "storybook",
          "chromatic",
          "knip",
          "a11y",
          "schemathesis"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"]
    }
  }
}
