# Control-plane (FastAPI)
ZPE_REDIS_URL=redis://localhost:6379/0
ZPE_COMPUTE_MODE=mock
ZPE_RESULT_STORE=sqlite
# Structure store persistence (default backend is sqlite)
# STRUCTURE_STORE_BACKEND=sqlite
# STRUCTURE_STORE_DB_PATH=.just-runtime/structures.sqlite3
# STRUCTURE_STORE_RESET_ON_START=0
# Keep admin token only in the control-plane
ZPE_ADMIN_TOKEN=change-me
# Optional: ops flags (default true; legacy worker fields retained for admin compatibility)
# ZPE_SUBMISSION_ENABLED=true
# ZPE_DEQUEUE_ENABLED=true
# Optional: Convex runtime relay dispatch endpoint
# ZPE_CONVEX_RELAY_URL=https://relay.example.com/events
# ZPE_CONVEX_RELAY_TOKEN=change-me
# ZPE_CONVEX_RELAY_TIMEOUT_SECONDS=5
# Optional: CORS allow list (comma-separated)
# CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:3001,https://chem-model-edit.tadashi240312.workers.dev
# Optional: CORS origin regex (preview builds)
# CORS_ALLOW_ORIGIN_REGEX=^https://[a-z0-9-]+-chem-model-edit\\.tadashi240312\\.workers\\.dev$

# Runtime (FastAPI on Modal, stateless gateway)
# These URLs are required for /api/runtime/* operation and /api/ready health gate.
# RUNTIME_EXECUTION_OWNER=aiida-slurm
# RUNTIME_REQUEST_TIMEOUT_SECONDS=5
# RUNTIME_SERVICE_AUTH_BEARER_TOKEN=change-me
# RUNTIME_COMMAND_SUBMIT_URL=https://runtime-gateway.example/api/runtime/jobs:submit
# RUNTIME_COMMAND_EVENT_URL_TEMPLATE=https://runtime-gateway.example/api/runtime/jobs/{job_id}/events
# RUNTIME_READ_STATUS_URL_TEMPLATE=https://runtime-gateway.example/api/runtime/jobs/{job_id}
# RUNTIME_READ_DETAIL_URL_TEMPLATE=https://runtime-gateway.example/api/runtime/jobs/{job_id}/detail
# RUNTIME_READ_PROJECTION_URL_TEMPLATE=https://runtime-gateway.example/api/runtime/jobs/{job_id}/projection

AUTH_MODE=clerk

# Clerk mode settings
# AUTH_CLERK_ISSUER=https://your-clerk-issuer
# AUTH_CLERK_AUDIENCE=your-api-audience
# AUTH_ALLOWED_EMAILS=you@example.com,tester@example.com
