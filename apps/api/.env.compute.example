# Compute-plane (RQ worker)
ZPE_REDIS_URL=redis://localhost:6379/0
ZPE_QUEUE_NAME=zpe
ZPE_RESULT_STORE=redis

# QE runtime
ZPE_PW_PATH=/path/to/pw.x
# Or rely on PATH resolution
# ZPE_PW_COMMAND=pw.x

# Pseudopotential directory
ZPE_PSEUDO_DIR=/path/to/pseudo
# Allow pseudo_dir from QE input only if you trust the input
ZPE_ALLOW_INPUT_PSEUDO_DIR=false

# MPI settings
ZPE_USE_MPI=true
ZPE_MPI_CMD=mpirun
ZPE_NP_CORE=12

# Worker runtime
ZPE_WORK_DIR=$HOME/zpe_jobs

# Optional: environ.in for QE + Environ
# ZPE_ENVIRON_PATH=/path/to/environ.in

# Optional: mock execution to avoid QE (for remote-path tests)
# ZPE_WORKER_MODE=mock
